{
    "name": "polythene-documentation",
    "version": "0.1.0",
    "description": "Polythene documentation",
    "license": "MIT",
    "main": "index.js",
    "directories": {
        "src": "src"
    },
    "devDependencies": {
        "shelljs": "",
        "rimraf": "",
        "sass": "",
        "autoprefixer": "",
        "marked": "",
        "autoprefixer": "",
        "systemjs": "",
        "systemjs-builder": "",
        "es6-module-loader": "",
        "babel-core": "",
        "babel-plugin-closure-elimination": "",
        "mithril": "^0.2.0",
        "lodash": "^3.10.1",
        "system-css": "",
        "system-text": ""
    },
    "scripts": {
        "postinstall": "npm run copy-libs && npm run symlink-polythene",
        "symlink-polythene": "node ../scripts/symlink-polythene.js ../polythene src/lib/polythene && node ../scripts/symlink-polythene.js ../polythene-theme src/lib/polythene-theme",
        "copy-libs": "node scripts/copy-libs src/lib",
        "copy-docs": "node scripts/copy-docs ../lib/ ./src/app/docs/",
        "watch-es6": "node ../scripts/watch-es6.js src/ src/lib/",
        "watch-css": "node ../scripts/watch-scss.js src/ src/lib/",
        "watch-doc": "node ../scripts/watch-doc.js ../lib/",
        "watch": "npm run watch-css & npm run watch-es6 & npm run watch-doc",
        "transpile-css": "node ../scripts/watch-scss.js src/app/ src/lib/ once",
        "transpile-js": "node ../scripts/watch-es6.js src/app/ src/lib/ once",
        "transpile": "npm run transpile-css && npm run transpile-js",
        "build": "npm run transpile && node scripts/build-app.js",
        "build-copy-to-gh": "cp -R build/* ../../gh-pages/",
        "build": "npm run copy-docs && npm run transpile && node scripts/build-app.js",
        "github": "rimraf ../../gh-pages/app && rimraf ../../gh-pages/lib && rimraf ../../gh-pages/config.js && rimraf ../../gh-pages/index.html && npm run build && npm run build-copy-to-gh",
        "clean": "rimraf ./build && rimraf ./node_modules && rimraf ./src/lib && find ./src/app -name \"*.js\" -not -name \"*.es6.js\" -print | xargs rimraf && find ./src/app -name \"*.css\" -print | xargs rimraf"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ArthurClemens/Polythene.git"
    },
    "author": "Arthur Clemens",
    "licenses": [{
        "type": "MIT",
        "url": "http://www.opensource.org/licenses/mit-license.php"
    }],
    "bugs": {
        "url": "https://github.com/ArthurClemens/Polythene/issues"
    },
    "homepage": "https://github.com/ArthurClemens/Polythene"
}